{
  "compilerOptions": {
    // --- The Correct Module Setup ---
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,

    // --- Other Recommended Settings ---
    "target": "ES2022",
    "rootDir": "src",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
